{
  "name": "@revisium/core",
  "version": "2.7.0",
  "description": "Revisium is a tool (UI/API) inspired by JSON (JSON Schema) and Git, designed to provide a flexible and low-level headless CMS solution.",
  "private": false,
  "homepage": "https://revisium.io",
  "license": "Apache-2.0",
  "author": "Anton Kashirov",
  "repository": {
    "type": "git",
    "url": "https://github.com/revisium/revisium-core.git"
  },
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "prisma:db:push": "npx prisma db push",
    "prisma:generate": "npx prisma generate --sql && npm run prisma:postgenerate",
    "prisma:postgenerate": "echo \"export * from './client';\" > src/__generated__/client/index.ts",
    "prisma:migrate:deploy": "npx prisma migrate deploy",
    "generate:seed:api": "ts-node prisma/seed/generateSeedApi.ts",
    "generate:seed:load": "ts-node prisma/seed/loadFromSeedApi.ts",
    "seed": "ts-node prisma/seed.ts",
    "seed:prod": "node --experimental-require-module dist/prisma/seed.js",
    "build": "nest build && tsc-alias -p tsconfig.build.json",
    "prepublishOnly": "npm run build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "NODE_ENV=production npm run prisma:migrate:deploy && npm run seed:prod && node --experimental-require-module dist/src/main",
    "lint:ci": "eslint \"{src,apps,libs,test}/**/*.ts\" --max-warnings 0",
    "lint:fix": "eslint \"{src,apps,libs,test}/**/*.ts\" --max-warnings 0 --fix",
    "test": "NODE_ENV=test jest",
    "test:watch": "NODE_ENV=test jest --watch",
    "test:cov": "NODE_ENV=test jest --coverage --silent",
    "test:debug": "NODE_ENV=test node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "NODE_ENV=test jest --config ./test/jest-e2e.json",
    "tsc": "tsc -p tsconfig.json",
    "docker:test-container-up": "docker compose -f docker-compose-test.yml -p revisium-core-test up -d && sleep 1 && dotenv -e .env.test npm run prisma:migrate:deploy && dotenv -e .env.test npm run seed",
    "docker:test-container-down": "docker compose -f docker-compose-test.yml -p revisium-core-test down --volumes",
    "version:minor": "npm version minor --no-git-tag-version",
    "version:patch": "npm version patch --no-git-tag-version"
  },
  "dependencies": {
    "@apollo/server": "^5.1.0",
    "@as-integrations/express5": "^1.1.2",
    "@aws-sdk/client-s3": "^3.816.0",
    "@aws-sdk/s3-request-presigner": "^3.816.0",
    "@casl/ability": "^6.7.3",
    "@modelcontextprotocol/sdk": "^1.25.2",
    "@nestjs/apollo": "^13.2.3",
    "@nestjs/cache-manager": "^3.1.0",
    "@nestjs/common": "^11.1.11",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.11",
    "@nestjs/cqrs": "^11.0.3",
    "@nestjs/event-emitter": "^3.0.1",
    "@nestjs/graphql": "^13.2.3",
    "@nestjs/jwt": "^11.0.2",
    "@nestjs/microservices": "^11.1.11",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.1.11",
    "@nestjs/schedule": "^6.1.0",
    "@nestjs/serve-static": "^5.0.4",
    "@nestjs/swagger": "^11.2.4",
    "@nestjs/terminus": "^11.0.0",
    "@prisma/adapter-pg": "^7.2.0",
    "@prisma/client": "^7.2.0",
    "@revisium/prisma-pg-json": "^1.4.0",
    "@revisium/schema-toolkit": "^0.14.0",
    "ajv": "^8.17.1",
    "bcrypt": "^6.0.0",
    "bentocache": "^1.6.0",
    "cache-manager": "^6.4.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.3",
    "compression": "^1.8.1",
    "dotenv": "^17.2.3",
    "graphql": "^16.12.0",
    "graphql-scalars": "^1.25.0",
    "handlebars": "^4.7.8",
    "ioredis": "^5.9.0",
    "lru-cache": "^11.2.4",
    "nanoid": "^3.3.11",
    "nodemailer": "^7.0.12",
    "object-hash": "^3.0.0",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "pg": "^8.16.3",
    "prom-client": "^15.1.3",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "sharp": "^0.34.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@nestjs/cli": "^11.0.14",
    "@nestjs/schematics": "^11.0.9",
    "@nestjs/testing": "^11.1.11",
    "@types/bcrypt": "^5.0.2",
    "@types/compression": "^1.8.1",
    "@types/express": "^5.0.6",
    "@types/jest": "^29.5.14",
    "@types/multer": "^1.4.13",
    "@types/node": "^22.19.3",
    "@types/nodemailer": "^6.4.21",
    "@types/object-hash": "^3.0.6",
    "@types/passport-jwt": "^4.0.1",
    "@types/pg": "^8.15.6",
    "@types/supertest": "^6.0.3",
    "aws-sdk-client-mock": "^4.1.0",
    "dotenv-cli": "^8.0.0",
    "eslint": "^9.27.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.4.1",
    "globals": "^16.1.0",
    "jest": "^29.7.0",
    "jest-mock-extended": "^3.0.7",
    "prettier": "^3.5.3",
    "prisma": "^7.2.0",
    "shx": "^0.4.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.2.2",
    "swagger-typescript-api": "^13.2.16",
    "ts-jest": "^29.4.6",
    "ts-loader": "^9.5.4",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.52.0"
  },
  "jest": {
    "modulePaths": [
      "<rootDir>"
    ],
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "./",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "<rootDir>/src/**/*.(t|j)s",
      "!<rootDir>/src/main.ts",
      "!<rootDir>/src/__generated__/**",
      "!<rootDir>/src/**/__tests__/**",
      "!<rootDir>/src/**/index.ts",
      "!<rootDir>/src/**/*.module.ts",
      "!<rootDir>/src/infrastructure/cache"
    ],
    "coverageReporters": [
      "text-summary",
      "lcov"
    ],
    "testEnvironment": "node",
    "setupFiles": [
      "<rootDir>/jest.setup.ts"
    ],
    "moduleNameMapper": {
      "^bentocache$": "<rootDir>/src/infrastructure/cache/__mocks__/bentocache.js",
      "^bentocache/drivers/memory$": "<rootDir>/src/infrastructure/cache/__mocks__/bentocache-memory.js",
      "^bentocache/drivers/redis$": "<rootDir>/src/infrastructure/cache/__mocks__/bentocache-redis.js"
    }
  }
}
