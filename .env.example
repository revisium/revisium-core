# ===========================================
# Server
# ===========================================
PORT=8080
PUBLIC_URL=

# ===========================================
# Database
# ===========================================
DATABASE_URL="postgresql://revisium:password@localhost:5433/revisium-dev?schema=public&connection_limit=10"

# ===========================================
# Transaction settings (serializable)
# ===========================================
# Connection pool wait time (ms)
#TRANSACTION_MAX_WAIT=10000
# Transaction timeout (ms)
#TRANSACTION_TIMEOUT=15000
# Maximum retry attempts for serialization conflicts
#TRANSACTION_MAX_RETRIES=20
# Initial retry delay (ms)
#TRANSACTION_BASE_DELAY_MS=30
# Maximum retry delay with exponential backoff (ms)
#TRANSACTION_MAX_DELAY_MS=1500

# ===========================================
# Cache (experimental)
# ===========================================
EXPERIMENTAL_CACHE=false
#EXPERIMENTAL_CACHE_L1_MAX_SIZE=128mb
#EXPERIMENTAL_CACHE_L2_REDIS_URL=redis://localhost:6379/0
#EXPERIMENTAL_CACHE_REDIS_BUS_HOST=localhost
#EXPERIMENTAL_CACHE_REDIS_BUS_PORT=6379
#EXPERIMENTAL_CACHE_DEBUG=false

# ===========================================
# Authentication
# ===========================================
JWT_SECRET=secret

# ===========================================
# Default users
# ===========================================
ADMIN_PASSWORD=admin
ENDPOINT_PASSWORD=endpoint

# ===========================================
# OAuth
# ===========================================
OAUTH_GOOGLE_CLIENT_ID=
OAUTH_GOOGLE_SECRET_ID=
OAUTH_GITHUB_CLIENT_ID=
OAUTH_GITHUB_SECRET_ID=

# ===========================================
# Endpoint service
# ===========================================
ENDPOINT_PORT=6380
ENDPOINT_HOST=localhost

# ===========================================
# Seeding
# ===========================================
SEED_OPENAPI_URL=
SEED_URL=

# ===========================================
# Email
# ===========================================
EMAIL_TRANSPORT=
EMAIL_PUBLIC_URL=
EMAIL_FROM=

# ===========================================
# Metrics
# ===========================================
METRICS_ENABLED="false"

# ===========================================
# Graceful shutdown
# ===========================================
GRACEFUL_SHUTDOWN_TIMEOUT=10000

# ===========================================
# File storage (S3)
# ===========================================
FILE_PLUGIN_PUBLIC_ENDPOINT=
S3_ENDPOINT=
S3_REGION=
S3_BUCKET=
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=
